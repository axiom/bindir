#!/bin/sh

FORMAT="%Y-%m-%d %H:%S:%M %Z"
AT=`TZ=Australia/Sydney    date +"$FORMAT"`
ET=`TZ=America/New_York    date +"$FORMAT"`
PT=`TZ=America/Los_Angeles date +"$FORMAT"`
ST=`TZ=Europe/Stockholm    date +"$FORMAT"`

echo "   Stockholm $ST"
echo " Los Angeles $PT"
echo "    New York $ET"
echo "   Melbourne $AT"
